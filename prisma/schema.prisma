generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  age       Int?
  interests String[] // array of strings to store multiple interests
  createdAt DateTime @default(now())
  profile   Profile?
}

model Profile {
  id              Int      @id @default(autoincrement())
  user            User     @relation(fields: [userId], references: [id])
  userId          Int      @unique
  profilePicture  String?  // لینک عکس ذخیره شده در MinIO
  certifications  String[] @default([]) // لیست مدارک کاربر
  badges          String[] @default([]) // لیست نشان‌ها
  bio             String?  // اطلاعات پایه / بیوگرافی
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
